<div class="comments-section row">
  {{#each this}}
    <div class="col-sm-4">
      <div class="header-wrapper card-header">
        <div class="meta">
          {{user.username}}
          on
          {{format_date created_at}}
        </div>
      </div>
      <div class="card-body">
        <div class="card-text">
          "{{comment_text}}"
        </div>
      </div>
    </div>
  {{/each}}
</div>